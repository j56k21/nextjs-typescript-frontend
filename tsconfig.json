{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["es6", "dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "strictNullChecks": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "types": ["node", "jest"],
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@pages/*": ["pages/*"],
      "@components/*": ["components/*"],
      "@components": ["components"],
      "@styles/*": ["styles/*"],
      "@styles": ["styles"],
      "@hooks/*": ["hooks/*"],
      "@hooks": ["hooks"],
      "@constants": ["constants"],
      "@constants/*": ["constants/*"],
      "@stores": ["stores"],
      "@service": ["service"],
      "@libs/*": ["libs/*"],
      "@utils": ["utils"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "next-env.d.ts", "next.config.js"],
  "exclude": ["node_modules"]
}
